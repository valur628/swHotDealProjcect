<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.hotdeal.HotdealFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#DD0C0C"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/main_hotdeal_img"
                android:layout_marginLeft="25dp"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:src="@drawable/amongus"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:text="소프트웨어 이름"/>

                <TextView
                    android:id="@+id/main_disperiod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"
                    android:text="할인 기간" />

                <TextView
                    android:id="@+id/main_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:text="원가"
                    android:textSize="16dp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/main_disprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:text="할인가" />

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/hotdeal_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

</ScrollView>