<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/id_sw_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_rep_pic"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/img_rep_pic"
        android:text="소프트웨어 이름"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ImageView
        android:id="@+id/img_rep_pic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="304dp"
        android:layout_marginBottom="307dp"
        android:visibility="visible"
        app:srcCompat="@drawable/img_sw_none" />

    <TextView
        android:id="@+id/id_cost"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_dis_price"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/img_rep_pic"
        android:text="원가" />

    <TextView
        android:id="@+id/id_dis_price"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_rep_pic"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/img_rep_pic"
        android:text="할인가" />

    <ImageView
        android:id="@+id/img_plat"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_below="@+id/id_sw_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="312dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/img_esd_none" />
</RelativeLayout>